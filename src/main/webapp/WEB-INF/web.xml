<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee https://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	
	
	<!-- 한글처리 -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>*</url-pattern>
	</filter-mapping>

	<!-- 초기 페이지 설정 -->
	<welcome-file-list>
		<welcome-file>index.scu</welcome-file>
	</welcome-file-list>
	<!-- 초기 페이지 설정 -->
	
	<!-- 마이바티스연결 -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/spring/root-context.xml</param-value>
	</context-param>
	
	<!-- Creates the Spring Container shared by all Servlets and Filters -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!-- 메인 페이지 이동 -->
	<servlet>
		<servlet-name>baseServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/spring/appServlet/base-context.xml
			</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>baseServlet</servlet-name>
		<url-pattern>*.scu</url-pattern>
	</servlet-mapping>
	<!-- 메인 페이지 이동 -->
	
	<!-- 멤버 페이지 이동 -->
	<servlet>
		<servlet-name>MemberServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/spring/appServlet/member-context.xml
			</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>MemberServlet</servlet-name>
		<url-pattern>*.mem</url-pattern>
	</servlet-mapping>
	<!-- 멤버 페이지 이동 -->
	<!-- 정보 페이지 이동 -->
	<servlet>
		<servlet-name>InformationServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/spring/appServlet/information-context.xml
			</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>InformationServlet</servlet-name>
		<url-pattern>*.info</url-pattern>
	</servlet-mapping>
	<!-- 정보 페이지 이동 -->	
	<!-- 자유게시판 페이지 이동 -->
	<servlet>
		<servlet-name>FreeBoardServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/spring/appServlet/freeboard-context.xml
			</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>FreeBoardServlet</servlet-name>
		<url-pattern>*.free</url-pattern>
	</servlet-mapping>
	<!-- 자유게시판 페이지 이동 -->
	<!-- 자유게시판 페이지 이동 -->
	<servlet>
		<servlet-name>serviceCenterServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/spring/appServlet/serviceCenter-context.xml
			</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>serviceCenterServlet</servlet-name>
		<url-pattern>*.ser</url-pattern>
	</servlet-mapping>
	<!-- 자유게시판 페이지 이동 -->
	
	
	
	
	
</web-app>
